public static String translateNumber(int zahl) {
	zahl--;
	String[] werte = {"eins", "zwei", "drei", "vier", "fuenf", "sechs", "sieben", "acht", "neun", "zehn"};
	
	try{
		String ausgabe = werte[zahl];
	} catch (IndexOutOfBoundsException e) {
		System.out.println("Übersetzung der Zahl" + (--zahl) + "nicht möglich (???)");
		return;
	}
	
	return ausgabe;
}
